<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sz.ZhiHu.dao.CommentDao">
    <select id="getAnswerCommentLevelOne" resultType="AnswerCommentLevelOne">
        select * from answer_comment_level_one
        where answerId = #{answerId}
        order by supportSum desc, id asc
        limit #{start},10
    </select>
</mapper>